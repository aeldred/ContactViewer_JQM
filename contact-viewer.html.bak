<!DOCTYPE html>
<html>
	<head>
		<title>Contact Viewer</title>

		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
		<link rel="stylesheet" href="contact-viewer.css" />
		<script src="http://documentcloud.github.com/underscore/underscore-min.js"></script>
		<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
		<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
		<script src="contact-viewer.js"></script>
		<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
	</head>

	<body>
		<div data-role="page" id="home-page">
			<div data-role="header">
				<h1>Contacts</h1>
				<a data-role="button" data-icon="plus" href="#new-page">
					Add
				</a>
			</div>
			<div data-role="content">
				<ul data-role="listview" id="contact-list">
					<li>
						<a>
							<h3>Item 1</h3>
							<p>
								Details
							</p>
						</a>
					</li>

					<li>
						<a>
							<h3>Item 2</h3>
							<p>
								Details
							</p>
						</a>
					</li>

				</ul>
			</div>
		</div>

		<div data-role="page" id="details-page">
			<div data-role="header">
				<a data-role="button" data-rel="back">
					Back
				</a>
				<a data-role="button" data-icon="edit" href="#edit-page">
					Edit
				</a>
				<h1>Contacts Details</h1>
			</div>
			<div data-role="content">
				<div>
					<p style="display:inline">Name:</p>
					<p class="contact-name" style="display:inline"></p>
				</div>
				<div>
					<p style="display:inline">Title:</p>
					<p class="contact-title" style="display:inline"></p>
				</div>
				<div>
					<p style="display:inline">Email:</p>
					<p class="contact-email" style="display:inline"></p>
				</div>
				<div>
					<p style="display:inline">Phone</p>
					<p class="contact-phone" style="display:inline"></p>
				</div>
				<div>
					<p style="display:inline">Twitter ID:</p>
					<p class="contact-twitterid" style="display:inline"></p>
				</div>
			</div>
		</div>

	<div data-role="page" id="new-page">
			<div data-role="header">
				<a data-role="button" data-rel="back">
					Back
				</a>
				<h1>New Contact</h1>
			</div>
			<div data-role="content">
				<div>
					<p style="display:inline">Name:</p>
					<input id="new-name" type="text" />
				</div>
				<div>
					<p style="display:inline">Title:</p>
					<input id="new-title" type="text" />
				</div>
				<div>
					<p style="display:inline">Email:</p>
					<input id="new-email" type="text" />
				</div>
				<div>
					<p style="display:inline">Phone</p>
					<input id="new-phone" type="text" />
				</div>
				<div>
					<p style="display:inline">Twitter ID:</p>
					<input id="new-twitterId" type="text" />
				</div>
				<input type="button" id="new-button" value="Submit">
			</div>
		</div>


		<div data-role="page" id="edit-page">
			<div data-role="header">
				<a data-role="button" data-rel="back">
					Back
				</a>
				<h1>Edit Contact</h1>
			</div>
			<div data-role="content">
				<div>
					<p style="display:inline">Name:</p>
					<input id="new-name" type="text"  />
				</div>
				<div>
					<p style="display:inline">Title:</p>
					<input id="new-title" type="text" />
				</div>
				<div>
					<p style="display:inline">Email:</p>
					<input id="new-email" type="text" />
				</div>
				<div>
					<p style="display:inline">Phone</p>
					<input id="new-phone" type="text" />
				</div>
				<div>
					<p style="display:inline">Twitter ID:</p>
					<input id="new-twitterid" type="text" />
				</div>
				<input type="button" id="edit-button" value="Edit">
			</div>
		</div>

	</body>
</html>
